{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                // 1. 主程序
                "${workspaceFolder}/taskfinal.cpp",
    
                // 2. 硬件接口
                "${workspaceFolder}/SM_io.cpp",
    
                // 3. 实车控制算法的所有 .cpp 文件
                "${workspaceFolder}/chassiscontrolsoftware/Src/*.cpp", 
    
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
    
                // 头文件路径
                "-I${workspaceFolder}/mujoco-3.4.0-linux-x86_64/mujoco-3.4.0/include",
                "-I${workspaceFolder}/chassiscontrolsoftware/Inc", 
    
                // 库路径
                "-L${workspaceFolder}/mujoco-3.4.0-linux-x86_64/mujoco-3.4.0/lib",
    
                // 链接库
                "-lmujoco",
                "-ldl",
                "-lglfw",
                "-lm",
    
                // 运行时路径
                "-Wl,-rpath,${workspaceFolder}/mujoco-3.4.0-linux-x86_64/mujoco-3.4.0/lib"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}